{
  "name": "myself-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for personal knowledge base API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http-server.ts",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "vercel-build": "tsc"
  },
  "keywords": ["mcp", "knowledge-base", "api"],
  "author": "Gavin Hensley",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vercel/node": "^3.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
